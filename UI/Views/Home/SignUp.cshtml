<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<section class="call-to-action hero-banner">
    <div class="cta-content">
        <h2>Welcome to register potential new clients</h2>
        <p>Join our gym and experience a transformation in your fitness journey.</p>
        <a href="#signup" class="btn btn-secondary">Register</a>

    </div>
</section>


<section class="join" id="signup">
    <div class="form-container">
        <form data-form data-state-form="signup">
            <img class="logo"
                src="https://png.pngtree.com/png-vector/20191004/ourmid/pngtree-lock-icon-png-image_1788630.jpg" alt="">
            <div class="form-main">
                <div data-form-inputs data-signup>
                    <h3 class="form-title">Create an account</h3>
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-input"
                            placeholder="userEmail@gmail.com">
                        <small class="form-help-text error"></small>
                    </div>
                    <div class="form-group">
                        <label for="name" class="form-label">User name</label>
                        <input type="text" id="name" name="name" class="form-input" placeholder="Name Lastname">
                        <small class="form-help-text error"></small>
                    </div>
                    <div class="form-group">
                        <label for="tel" class="form-label">Phone</label>
                        <input type="tel" id="tel" name="number" class="form-input" placeholder="88763864">
                        <small class="form-help-text error"></small>
                    </div>
                    <div class="form-group">
                        <label for="date" class="form-label">Birthday</label>
                        <input type="date" id="date" name="dateOfBirth" class="form-input" placeholder="">
                        <small class="form-help-text error"></small>
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" class="form-input" placeholder="mySecret123">
                        <small class="form-help-text error"></small>
                    </div>
                    <div class="form-group">
                        <label for="type" class="form-label">Select a fruit</label>
                        <select id="type" name="typeUserId" class="form-select">
                            <option value="2">Goers</option>
                            <option value="1">Administrator</option>
                            <option value="3">Coach</option>
                            <option value="4">Receptionist</option>
                        </select>
                    </div>
                </div>
                <div data-form-inputs data-validate-code>
                    <h3 class="form-title">Verification code</h3>
                    <div class="form-group">
                        <label for="code" class="form-label">Code</label>
                        <input type="number" id="code" name="code" class="form-input" placeholder="xxxxx">
                        <small class="form-help-text error"></small>
                    </div>
                    <div class="form-group">
                        <button data-resent-code style="text-align: left;">
                            <small class="form-help-text">Didn't recived a message? <strong>Re-send</strong></small>
                        </button>
                    </div>
                </div>
            </div>
            <div class="form-footer">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
                <small class="form-help-text footnote">Already have an account? <a href="/home/#join"
                        class="link">Login</a></small>
            </div>
        </form>
    </div>
</section>

<script src="~/js/signup.js" type="module" asp-append-version="true"></script>
