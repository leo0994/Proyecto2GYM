            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>

    <br><br>
    <div class="form-container">
        <div class="form-group">
            <label for="machine-search" class="form-label">Search Machines</label>
            <input type="text" id="machine-search" class="form-input" placeholder="Search for a machine" oninput="searchMachines()">
            <button type="button" class="btn btn-secondary" onclick="searchMachines()">Search</button>
        </div>
        <div class="form-group">
            <ul id="machine-results" class="form-list">
                <!-- Results will be appended here -->
            </ul>
        </div>
    </div>

    <div class="form-container">
