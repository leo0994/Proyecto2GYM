@{
    ViewData["Title"] = "Gym-Proyecto2";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />


<section class="hero hero-banner">
    <div class="hero-content">
        <h1>Transform your body and <br> achieve your fitness goals</h1>
        <p>Welcome to our state-of-the-art gym, where you can push your limits <br>and become the best version of
            yourself.</p>
        <div class="cta-buttons">
            <a href="#join" class="btn btn-secondary">Join</a>
        </div>
    </div>
</section>

<section class="services">
    <div>
        <h2>Unleash Your Potential with Our Gym Services</h2>
    </div>
    <div>
        <p>Discover a wide range of services designed to help you achieve your fitness goals. From personalized
            training sessions to energizing group classes, our state-of-the-art equipment and experienced
            trainers
            are here to support you every step of the way.</p>
        <a href="#join" class="btn btn-primary">Join</a>
    </div>
</section>

<section class="call-to-action hero-banner">
    <div class="cta-content">
        <h2>Get Fit and Stay Healthy</h2>
        <p>Join our gym and experience a transformation in your fitness journey.</p>
        <a href="#" class="btn btn-secondary">Activities</a>
    </div>
</section>

<div class="join" id="join">
    <div class="form-container">
        <form>
            <img class="logo"
                src="https://png.pngtree.com/png-vector/20191004/ourmid/pngtree-lock-icon-png-image_1788630.jpg" alt="">
            <div class="form-main">
                <div data-login style="display: noe;">
                    <h3 class="form-title">Have an acount?</h3>
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" id="email" class="form-input" placeholder="myEmail@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" class="form-input" placeholder="mySecret123">
                    </div>
                    <div class="form-group">
                        <button style="text-align: left;">
                            <small class="form-help-text">Forgot password?</small>
                        </button>
                    </div>
                </div>
                <div data-forgotpass style="display: none;">
                    <h3 class="form-title">Forgot Password</h3>
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" id="email" class="form-input" placeholder="myEmail@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">New password</label>
                        <input type="password" id="password" class="form-input" placeholder="mySecret123">
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Confirm password</label>
                        <input type="password" id="password" class="form-input" placeholder="mySecret123">
                    </div>
                    <div class="form-group">
                        <button style="text-align: left;">
                            <small class="form-help-text">Back to sign in</small>
                        </button>
                    </div>
                </div>
                <div data-validate-code style="display: none;">
                    <h3 class="form-title">Verification code</h3>
                    <div class="form-group">
                        <label for="code" class="form-label">Code</label>
                        <input type="number" id="code" class="form-input" placeholder="xxxxx">
                    </div>
                    <div class="form-group">
                        <button style="text-align: left;">
                            <small class="form-help-text">Didn't recived a message? <strong>Re-send</strong></small>
                        </button>
                    </div>
                </div>
            </div>
            <div class="form-footer">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
                <small class="form-help-text footnote">Don't have an account? <a href="/home/about"
                        class="link">About</a></small>
            </div>
        </form>
    </div>
</div>


<section class="contact hero-banner">
    <div class="cta-content">
        <h2>Any question?</h2>
        <p>Please reach out to us and let us know your questions, <br> we're happy to help</p>
        <a href="#" class="btn btn-secondary">Contact</a>
    </div>
</section>
