@{
    ViewData["Title"] = "Create Coupons";
}

<h2>Create Coupons</h2>
<br>
<br />

<div class="form-container">


<form id="CouponsForm">

    <div class="form-group">
            <label for="name" class="form-label">Name:</label>
        <input type="text" class="form-input" id="name" name="name" required>
    </div>


    <div class="form-group">
            <label for="Quantity" class="form-label">Quantity:</label>
            <input type="text" class="form-input" id="Quantity" name="Quantity" required>
    </div>


    <div class="form-group">
            <label for="ExpirationDate" class="form-label">Expiration Date:</label>
            <input type="text" class="form-input" id="ExpirationDate" name="ExpirationDate" required>
    </div>

     <div class="form-group">
            <label for="Percentaje" class="form-label">Percentaje:</label>
            <input type="text" class="form-input" id="Percentaje" name="Percentaje" required>
     </div>

        <br>
        <br />
    <button type="submit" class="btn btn-primary">Create Coupon</button>
</form>


</div>
<br>
<br />

<!-- Referencia al archivo JavaScript -->
@section Scripts {
    <script src="~/js/discounts.js"></script> 
}


